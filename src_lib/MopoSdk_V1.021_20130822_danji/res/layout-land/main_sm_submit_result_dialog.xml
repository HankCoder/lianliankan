<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="368dp"
	android:layout_height="228dp" android:background="@drawable/sm_sub_ret_bg"
	android:layout_gravity="center_horizontal" android:id="@+id/sub_ret_dialog">

	<ImageView android:layout_height="wrap_content" android:src="@drawable/sm_ret_bg"
		android:id="@+id/imge_ret_bg" android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal"></ImageView>

	<TextView android:text="支付请求已提交" android:id="@+id/sub_ret_tv"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="left" android:textSize="14sp" android:gravity="left"
		android:textColor="#5B6E7C" android:paddingLeft="20dp"
		android:paddingRight="20dp" android:layout_marginTop="3dp"
		android:lineSpacingExtra="8dp">
	</TextView>
	
	<RelativeLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		
		<LinearLayout
		android:id="@+id/bottom_btns_layout"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_alignParentBottom="true"
		android:layout_marginTop="8dp"
		android:layout_centerHorizontal="true"
		>
		<Button android:id="@+id/button_left" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_marginRight="20dp" android:background="@drawable/sm_query_ret_button"></Button>
		<Button android:id="@+id/button_right" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:background="@drawable/sm_button_back"
			/>
		</LinearLayout>
		
		<ScrollView android:id="@+id/scrollview"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:fadingEdge="none" android:layout_above="@id/bottom_btns_layout"
		android:layout_alignParentTop="true">
		<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView
		    android:id="@+id/sub_hint_tv"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:autoLink="all"
		    android:lineSpacingExtra="3dp"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:text="支付请求已提交"
		    android:textColor="#5B6E7C"
		    android:textSize="14sp" >

		</TextView>
		</LinearLayout>
		</ScrollView>
		
	</RelativeLayout>

</LinearLayout>

