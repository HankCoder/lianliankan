<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="228dp"
	android:layout_height="wrap_content" android:background="@drawable/sm_pop_bg"
	android:paddingBottom="20dp"
	android:gravity="center_horizontal">
	<RelativeLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="left" android:gravity="left">
		<ImageView android:id="@+id/image_hint"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/sm_warning" android:layout_marginLeft="8dp"
			android:layout_marginTop="9dp" />
		<TextView android:id="@+id/text_hint_title"
			android:layout_toRightOf="@id/image_hint" android:layout_marginLeft="8dp"
			android:layout_marginTop="12dp" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="提  示"
			android:textColor="#FFFFFF" android:gravity="center"
			android:textSize="15dp" />
	</RelativeLayout>

	<TextView android:id="@+id/text_hint"
		android:paddingLeft="8dp"
		android:layout_marginTop="5dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="未知错误"
		android:textColor="#FFFFFF" android:textSize="13.3dp"
		android:lineSpacingExtra="5dp" android:gravity="left" />
		
</LinearLayout>


