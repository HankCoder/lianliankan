<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 阴影背景 -->

    <TextView
        android:id="@+id/text_back_ground_color_sm_main"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="@drawable/sm_top" />

    <!-- 聚焦区域布局 -->

    <LinearLayout
        android:id="@+id/main_menu_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_horizontal"
        android:orientation="vertical" >

        <!-- 标题栏 -->

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="fill_parent"
            android:layout_height="98dp"
            android:background="@drawable/sm_input_top"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/user_img_hint"
                android:layout_width="43.3dp"
                android:layout_height="51.3dp"
                android:layout_marginLeft="4dp"
                android:scaleType="center"
                android:src="@drawable/sm_main_menu_user_icon" />

            <TextView
                android:id="@+id/user_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.3dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/user_img_hint"
                android:ellipsize="end"
                android:lineSpacingExtra="3.65dp"
                android:maxLines="2"
                android:text="欢迎使用指易付"
                android:textColor="@color/user_hint"
                android:textSize="13.3sp" />

            <Button
                android:id="@+id/btn_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4.67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4.67dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sm_icon_help_xml" >
            </Button>

            <Button
                android:id="@+id/btn_inquiry"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4.67dp"
                android:layout_marginLeft="132.67dp"
                android:layout_marginRight="4.67dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/btn_help"
                android:background="@drawable/sm_main_menu_inquiry_button" >
            </Button>
            <!-- 标题栏 -->
        </RelativeLayout>

        <!-- 输入栏 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sm_input_bg"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/main_menu_gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:columnWidth="52dp"
                android:gravity="center"
                android:horizontalSpacing="31.3dp"
                android:numColumns="auto_fit"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="17.3dp" />
            <!-- 输入栏 -->
        </LinearLayout>
        <!-- 聚焦区域布局 -->
    </LinearLayout>

</FrameLayout>